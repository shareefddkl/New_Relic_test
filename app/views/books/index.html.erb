<h1>Listing books</h1>

<table id="books_id">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th >Description</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author_name %></td>
        <td><%= book.description %>
        <%= link_to 'Show', book %>
        <%= link_to 'Edit', edit_book_path(book) %>
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<script>
  $('#books_id').dataTable();
</script>